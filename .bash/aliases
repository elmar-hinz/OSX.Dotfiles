# Administration
alias backmeup="rsync -av --exclude .Trashes --exclude .Spotlight-V100 --exclude .DocumentRevisions-V100 --delete /Volumes/ME/ /Volumes/MEB/ && hdiutil unmount /Volumes/MEB/"
alias cdmain="cd $MAIN_DIR"
alias cdsoft="cd $SOFTWARE_DIR"
alias cdman="cd $MAN_DIR"
alias sixpack_sync="
    hdiutil attach -mountpoint /Volumes/SOFTWARE_TARGET/ /Volumes/ME/SOFTWARE.sparseimage \
    && rsync \
        -av --delete \
        --exclude .Trashes --exclude .Spotlight-V100 --exclude .DocumentRevisions-V100 --exclude .DS_Store --exclude .fseventsd \
        /Volumes/SOFTWARE/ /Volumes/SOFTWARE_TARGET/ \
    && hdiutil unmount /Volumes/SOFTWARE_TARGET/
"

