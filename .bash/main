# Base of this system
export DOTFILES_DIR="$HOME/.my.dotfiles"

# Read personal settings
file="$HOME/.bash_personal_settings"
[ -r "$file" ] && [ -f "$file" ] && source "$file";

# Load the shell dotfiles
for file in $DOTFILES_DIR/.bash/{pathes,aliases,settings,includes}; do
        [ -r "$file" ] && [ -f "$file" ] && source "$file";
done;
unset file;

# Docker settings
export DOCKER_HOST=tcp://192.168.56.2:2375
export DOCKER_TLS_VERIFY=

# Base of this system
export DOTFILES_DIR="$HOME/.dotfiles"

# Read personal settings
file="$HOME/.bash_personal_settings"
[ -r "$file" ] && [ -f "$file" ] && source "$file";

# Load the shell dotfiles
for file in $DOTFILES_DIR/link/.bash/{pathes,aliases,settings,includes}; do
    [ -r "$file" ] && [ -f "$file" ] && source "$file";
done;
unset file;


export HOMEBREW_PREFIX="$HOME/Homebrew"
export HOMEBREW_TEMP="$HOMEBREW_PREFIX/Temp"
export HOMEBREW_CACHE="$HOME/Library/Caches/Homebrew"
export PATH="$HOMEBREW_PREFIX/bin:$PATH"
export PATH="$HOMEBREW_PREFIX/sbin:$PATH"
if [ -f $HOMEBREW_PREFIX/etc/bash_completion ]; then
    source $HOMEBREW_PREFIX/etc/bash_completion
fi

export HOMEBREW_CASK_OPTS="--appdir=$HOME/Applications --caskroom=$HOMEBREW_PREFIX/Caskroom"



